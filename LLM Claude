import anthropic

client = anthropic.Anthropic(api_key="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")

def chat_with_claude():
    print("Claude Chatbot (type 'quit' to exit)")
    while True:
        user_input = input("You: ")
        if user_input.lower() in ["quit", "exit", "done"]:
            print("Chat ended. Goodbye!")
            break

        # Send request to Claude
        message = client.messages.create(
            model="claude-opus-4-1-20250805",  # You can also use haiku (cheaper) or opus (stronger)
            max_tokens=100,
            messages=[
                {"role": "user", "content": user_input}
            ]

        )
        # Print Claudeâ€™s reply as minuet
        print("Minuet:", message.content[0].text)


if __name__ == "__main__":
    chat_with_claude()
import anthropic
history = []

while True:
    user_input = input("You: ")
    if user_input.lower() in ["quit", "exit"]:
        break

    #Add user input to history
    history.append({"role": "user", "content": user_input})
response = client.messages.create(
    model="claude-opus-4-1-20250805",
    max_tokens=500,
    messages=history
)

reply = response.content[0].text
print("Claude:", reply)

#Add reply to history
history.append({"role": "assistant", "content": reply})
